<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <Dialog Id="SummaryDlg" Width="370" Height="270" Title="[ProductName] Summary">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="&amp;Install">
          <Publish Event="NewDialog" Value="VerifyReadyDlg">1</Publish>
        </Control>
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="&lt; &amp;Back">
          <Publish Event="NewDialog" Value="FirewallDlg">1</Publish>
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="Cancel">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
        <Control Id="BannerLine" Type="Line" X="0" Y="0" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="Review installation settings" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Bigger}Installation Summary" />
        
        <Control Id="SummaryText" Type="ScrollableText" X="20" Y="60" Width="330" Height="170" Sunken="yes" TabSkip="no">
          <Text>Installation Location: [INSTALLFOLDER]&#13;&#10;Port: [CONFIG_PORT]&#13;&#10;HTTPS: [CONFIG_USEHTTPS]&#13;&#10;Firewall Rule: [CONFIG_CREATEFIREWALL]&#13;&#10;&#13;&#10;Ready to install Openctrol Agent.</Text>
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>

