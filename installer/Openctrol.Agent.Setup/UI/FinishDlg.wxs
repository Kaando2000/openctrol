<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <UI>
      <Dialog Id="FinishDlg" Width="370" Height="270" Title="[ProductName] Installation Complete">
        <Control Id="Finish" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Cancel="yes" Text="Finish">
          <Publish Event="EndDialog" Value="Return">1</Publish>
        </Control>
        <Control Id="BannerLine" Type="Line" X="0" Y="0" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="Openctrol Agent has been installed successfully" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Bigger}Installation Complete" />
        
        <Control Id="FinishText" Type="ScrollableText" X="20" Y="60" Width="330" Height="170" Sunken="yes" TabSkip="no">
          <Text>Openctrol Agent has been installed and started.&#13;&#10;&#13;&#10;Installation Location: [INSTALLFOLDER]&#13;&#10;Port: [CONFIG_PORT]&#13;&#10;&#13;&#10;IMPORTANT: Save these values:&#13;&#10;Agent ID: [CONFIG_AGENTID_GENERATED]&#13;&#10;API Key: [CONFIG_APIKEY_GENERATED]&#13;&#10;&#13;&#10;Health Check URL:&#13;&#10;http://localhost:[CONFIG_PORT]/api/v1/health&#13;&#10;&#13;&#10;The service is running and ready to accept connections.</Text>
        </Control>
      </Dialog>
    </UI>
  </Fragment>
</Wix>

